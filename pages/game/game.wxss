.text-box {
    position: absolute;
    top: 0.5rem;
    width: 100%;
    text-align: center;
    color: red;
    font-size: 1.5rem;
}

.row {
    width: 100%;
    height: 25%;
    background: red;
    display: flex;
    box-sizing: border-box;
}
.row:last-child {
    border-bottom: 1rpx solid #222;
}
.col {
    width: 33.33%;
    height: 100%;
    border-left: 1rpx solid #222;
    border-top: 1rpx solid #222;
    box-sizing: border-box;
}
.col.last {
    border-right: 1rpx solid #222;
}
.black {
    width: 100%;
    height: 100%;
    background:#000;
}
.white {
    width: 100%;
    height: 100%;
    background: #fff;
}